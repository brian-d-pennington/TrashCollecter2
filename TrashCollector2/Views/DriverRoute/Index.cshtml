@model IEnumerable<TrashCollector2.Models.DriverRoute>

@{
    ViewBag.Title = "Index";
}

<h2>Today's Pickups</h2>

<table class="table">
    <tr>
        <th>
            @Html.Label("Driver Route (by Zipcode)")
        </th>
        <th>
            @Html.Label("Customer Addresses")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Employee.Route)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.StreetAddress)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |*@
            @Html.ActionLink("Mark Pickup As Complete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
